---
import SealDistrict from '../assets/images/d12/District_12_Seal.webp';
import ImgLocation from '../assets/images/d12/District_12_on_Map.webp';
import ImgIndustry from '../assets/images/d12/mine_coal.png';
import ImgFemaleVictor from '../assets/images/d12/lucy_gray.webp';
import ImgFemaleVictor2 from '../assets/images/d12/katniss.jpg';
import ImgMaleVictor from '../assets/images/d12/Haymitch.webp';
import ImgDistrict from '../assets/images/d12/hall_of_justice_12.jpg';
import ImgDistrict2 from '../assets/images/d12/Hanging_tree_TBOSAS.webp';
import ImgDistrict3 from '../assets/images/d12/mellark_bakery.jpg';
import ImgDistrict4 from '../assets/images/d12/Pin_de_Sinsajo.webp';

import Layout from "../layouts/Layout.astro";
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
---

<Layout title='District 12'>
  <main class="px-20  overflow-hidden">
    <Header titleHeader='District 12' />

    <section class="relative w-full flex justify-center mt-42 mb-12">
      <div>
        <img src={SealDistrict.src} alt="District 12" class="w-[400px] drop-shadow-lg">
      </div>
      <img src={ImgDistrict.src} alt="District 12" class="absolute -top-4 -right-24 w-[560px] opacity-40 rounded-lg -z-20">
      <img src={ImgDistrict2.src} alt="District 12" class="absolute -top-4 -left-24 w-[380px] opacity-40 rounded-lg -z-10">
      <img src={ImgDistrict3.src} alt="District 12" class="absolute bottom-6 left-0 w-[380px] opacity-40 rounded-lg -z-10">
      <img src={ImgDistrict4.src} alt="District 12" class="absolute bottom-8 -right-24 w-[360px] opacity-40 rounded-lg">
    </section>

    <section>
      <div class="flex items-center py-12">
        <div>
          <p class="text-white-text text-2xl font-bold font-family-secondary mb-4">Location</p>
          <p class="text-white-text/90 text-lg font-family-secondary w-[70%]">District 12 is located in the northeast of North America. Its territory corresponds primarily to the U.S. states of Kentucky, Ohio, and West Virginia. Historically, this region is known for its strong coal mining industry and its extensive coal beds, particularly in West Virginia and Kentucky, which ties well with the district's industry. </p>
        </div>
        <div>
          <img src={ImgLocation.src} alt="district location" class="w-[800px] rounded-lg">
        </div>
      </div>
      <div class="w-full flex justify-between items-center py-12">
        <div>
          <img src={ImgIndustry.src} alt="district industry" class="w-[800px] rounded-lg">
        </div>
        <div class="text-end w-full">
          <p class="text-white-text  text-2xl font-bold font-family-secondary mb-4">Industry</p>
          <p class="text-white-text/90 text-lg font-family-secondary pl-44">District 12's main industry is coal mining, but after the Second Rebellion, their main industry was converted to medicine.</p>
        </div>
      </div>
    </section>

    <section class="mt-26">
      <h3 class="text-white-text font-semibold text-4xl">Victors</h3>
      <article class="flex flex-col gap-16 mt-18">
        <div class="flex items-center gap-6">  
          <div class="w-[100px] h-[100px] rounded-full overflow-hidden bg-gray-800">
            <img src={ImgFemaleVictor.src} alt="Lucy Gray" class="w-[100px] object-cover">
          </div>
          <div>
            <p class="text-white-text text-2xl font-semibold mb-2">Lucy Gray</p>
            <p class="text-white-text/90">Victor of the 10th Hunger Games</p>
          </div>
        </div>

        <div class="flex items-center gap-6">
          <div class="w-[100px] h-[100px] rounded-full overflow-hidden">
            <img src={ImgMaleVictor.src} alt="Haymitch" class="w-[100px] rounded-full">
          </div>
          <div>
            <p class="text-white-text text-2xl font-semibold mb-2">Haymitch Abernathy</p>
            <p class="text-white-text/90">Victor of the 50th Hunger Games</p>
          </div>
        </div>

        <div class="flex items-center gap-6">  
          <div class="w-[100px] h-[100px] rounded-full overflow-hidden bg-gray-800">
            <img src={ImgFemaleVictor2.src} alt="Katniss Everdeen" class="w-[100px] object-cover">
          </div>
          <div>
            <p class="text-white-text text-2xl font-semibold mb-2">Katniss Everdeen</p>
            <p class="text-white-text/90">Co-victor of the 74th Hunger Games</p>
          </div>
        </div>
      </article>
    </section>

    <Footer />
  </main>
</Layout>