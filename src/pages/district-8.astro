---
import SealDistrict from '../assets/images/d8/District_8_Seal.webp';
import ImgLocation from '../assets/images/d8/District_8_on_Map.webp';
import ImgIndustry from '../assets/images/d8/textiles.jpg';
import ImgFemaleVictor from '../assets/images/d8/Cecelia.webp';
import ImgMaleVictor from '../assets/images/d8/Woof.webp';
import ImgDistrict2 from '../assets/images/d8/filmDistrict8.webp';
import ImgDistrict from '../assets/images/d8/District_8_victory_tour.webp';

import Layout from "../layouts/Layout.astro";
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
---

<Layout title='District 8'>
  <main class="px-8 md:px-20 overflow-hidden">
    <Header titleHeader='District 8' />

    <section class="relative w-full flex justify-center mt-42 mb-12">
      <div>
        <img src={SealDistrict.src} alt="District 8" transition:name="d8" class="w-[400px]">
      </div>
      <img src={ImgDistrict.src} alt="District 8" class="absolute -top-28 md:top-0 md:-right-24 md:w-[560px] opacity-20 md:opacity-40 mask-x-from-96% mask-b-from-96% rounded-lg -z-10">
      <img src={ImgDistrict2.src} alt="District 8" class="absolute top-16 md:top-0 md:-left-24 md:w-[560px] opacity-20 md:opacity-40 mask-x-from-96% mask-b-from-96% rounded-lg -z-20">
    </section>

    <section>
      <div class="flex flex-col md:flex-row items-center py-12">
        <div>
          <p class="text-white-text text-2xl font-bold font-family-secondary mb-4">Location</p>
          <p class="text-white-text/90 text-lg font-family-secondary md:w-[70%]">District 8's territory corresponds to a long, narrow region in the northern part of southeast North America. Its territory is primarily centered on the U.S. states of Kansas, Missouri, southern Illinois, and Tennessee. District 8 borders five other districts: District 12 (to the east and northeast), District 11 (to the south), District 2 (to the west), District 9 (to the northwest), and District 3 (to the north).</p>
        </div>
        <div class="mt-10 md:mt-0">
          <img src={ImgLocation.src} alt="district location" class="w-[900px] rounded-lg">
        </div>
      </div>
      <div class="w-full flex flex-col-reverse md:flex-row justify-between items-center py-12">
        <div class="mt-10 md:mt-0">
          <img src={ImgIndustry.src} alt="district industry" class="w-[400px]! rounded-lg">
        </div>
        <div class="md:text-end w-full">
          <p class="text-white-text  text-2xl font-bold font-family-secondary mb-4">Industry</p>
          <p class="text-white-text/90 text-lg font-family-secondary md:pl-44">Its main industry is textile production. They have at least one factory that is used for making Peacekeeper uniforms.</p>
        </div>
      </div>
    </section>

    <section class="mt-26">
      <h3 class="text-white-text font-semibold text-4xl">Victors</h3>
      <article class="flex flex-col gap-16 mt-18">
        <div class="flex items-center gap-6">  
          <div class="w-[100px] h-[100px] rounded-full overflow-hidden bg-gray-800">
            <img src={ImgFemaleVictor.src} alt="Cecelia" class="w-[100px] object-cover">
          </div>
          <div>
            <p class="text-white-text text-2xl font-semibold mb-2">Cecelia</p>
            <p class="text-white-text/90">Victor of an unknown Hunger Games</p>
          </div>
        </div>

        <div class="flex items-center gap-6">
          <div class="w-[100px] h-[100px] rounded-full overflow-hidden">
            <img src={ImgMaleVictor.src} alt="Woof" class="w-[100px] rounded-full">
          </div>
          <div>
            <p class="text-white-text text-2xl font-semibold mb-2">Woof</p>
            <p class="text-white-text/90">Victor of an unknown Games</p>
          </div>
        </div>
      </article>
    </section>

    <Footer />
  </main>
</Layout>